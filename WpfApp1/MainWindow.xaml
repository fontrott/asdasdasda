        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440">
    <Grid Margin="0,1,0,-1">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle HorizontalAlignment="Center" Height="100" Stroke="#00000000" VerticalAlignment="Top" Width="1440" Fill="#FF1F2937"/>
        <Button Content="Файл" HorizontalAlignment="Left" Margin="11,25,0,0" VerticalAlignment="Top" Click="Button_Click" Height="50" Width="136" FontSize="32" Background="#FF1F2937" BorderBrush="#FF1F2937" Foreground="White"/>
