        <Rectangle HorizontalAlignment="Center" Height="100" Stroke="#00000000" VerticalAlignment="Top" Width="1440" Fill="#FFE5E7EB" Margin="0,100,0,0"/>
        <Label Content="Часы реального времени с будильником на EEPROM" Margin="278,121,278,0" VerticalAlignment="Top" FontSize="36"/>
        <Rectangle HorizontalAlignment="Left" Height="808" Stroke="#00000000" VerticalAlignment="Top" Width="720" Fill="White" Margin="0,200,0,0"/>
        <Canvas Margin="0,0,0,855">
            <Rectangle Fill="#FFFFFF" Height="806" Width="720" HorizontalAlignment="Center" Canvas.Top="201" VerticalAlignment="Top">
                <Rectangle.Effect>
                    <DropShadowEffect BlurRadius="5" Color="#000000" ShadowDepth="2" Direction="-2" RenderingBias="Performance" Opacity="0.5"/>
                </Rectangle.Effect>
            </Rectangle>
        </Canvas>
        <Label Content="Будильники:" HorizontalAlignment="Left" Margin="25,225,0,0" VerticalAlignment="Top" Width="218" Height="60" FontSize="36"/>
