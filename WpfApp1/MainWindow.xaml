        <Rectangle HorizontalAlignment="Left" Height="120" Stroke="#00000000" VerticalAlignment="Top" Width="670" Fill="#FFE5E7EB" Margin="25,451,0,0" RadiusX="30" RadiusY="30"/>
        <Rectangle HorizontalAlignment="Left" Height="120" Stroke="#00000000" VerticalAlignment="Top" Width="670" Fill="#FFE5E7EB" Margin="25,591,0,0" RadiusX="30" RadiusY="30"/>
        <Rectangle HorizontalAlignment="Left" Height="120" Stroke="#00000000" VerticalAlignment="Top" Width="670" Fill="#FFE5E7EB" Margin="25,731,0,0" RadiusX="30" RadiusY="30"/>
        <Rectangle HorizontalAlignment="Left" Height="120" Stroke="#00000000" VerticalAlignment="Top" Width="670" Fill="#FFE5E7EB" Margin="25,871,0,0" RadiusX="30" RadiusY="30"/>
    </Grid>
